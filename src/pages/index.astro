---
import Layout from "../layout.astro";
import DEV_DATA from "../data/devs.ts";
import { Github, Linkedin, Globe, User } from "@lucide/astro";
---

<Layout title="Dolphinder - Developer Directory">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Header -->
    <header class="bg-white/10 backdrop-blur-md border-b border-white/20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold text-white mb-2">üê¨ Dolphinder</h1>
          <p class="text-white/80">Discover talented developers</p>
        </div>
      </div>
    </header>

    <!-- Developers Grid -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {DEV_DATA.map((dev) => (
          <a
            href={`/${dev.username}`}
            class="bg-white/10 backdrop-blur-md rounded-2xl border border-white/20 p-6 hover:bg-white/15 hover:border-purple-400/50 transition-all duration-300 group"
          >
            <!-- Avatar -->
            <div class="flex items-center space-x-4 mb-4">
              {dev.avatar ? (
                <img
                  src={dev.avatar}
                  alt={`${dev.name} avatar`}
                  class="w-16 h-16 rounded-full border-2 border-white/20 object-cover"
                />
              ) : (
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center text-white text-xl font-bold">
                  {dev.name.charAt(0)}
                </div>
              )}
              <div>
                <h3 class="text-xl font-bold text-white group-hover:text-purple-300 transition-colors">
                  {dev.name}
                </h3>
                <p class="text-purple-300">@{dev.username}</p>
              </div>
            </div>

            <!-- Bio -->
            {dev.bio && (
              <p class="text-white/80 text-sm mb-4 line-clamp-2">{dev.bio}</p>
            )}

            <!-- Social Links -->
            <div class="flex space-x-3">
              <div class="w-8 h-8 bg-gray-800 rounded-lg flex items-center justify-center">
                <Github class="w-4 h-4 text-white" />
              </div>
              {dev.linkedin && (
                <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                  <Linkedin class="w-4 h-4 text-white" />
                </div>
              )}
              {dev.website && (
                <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                  <Globe class="w-4 h-4 text-white" />
                </div>
              )}
            </div>
          </a>
        ))}
      </div>

      <!-- Empty State -->
      {DEV_DATA.length === 0 && (
        <div class="text-center py-12">
          <User class="w-16 h-16 text-white/40 mx-auto mb-4" />
          <h3 class="text-2xl font-semibold text-white mb-2">No developers yet</h3>
          <p class="text-white/60">Check back soon for amazing developers!</p>
        </div>
      )}
    </main>

    <!-- Footer -->
    <footer class="mt-16 py-8 text-center text-white/60">
      <p>Built with ‚ù§Ô∏è using Astro & Tailwind CSS</p>
    </footer>
  </div>
</Layout>
